<Window x:Class="HardwareStore2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareStore2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60">
            </RowDefinition> 
            <RowDefinition Height="201*"/>
           
        </Grid.RowDefinitions>
        <Rectangle Fill="OrangeRed" Grid.ColumnSpan="2"></Rectangle>
        <TextBlock x:Name="TitleTB" Grid.Column="1" HorizontalAlignment="Center" FontFamily="Arial" 
                   FontSize="30" FontStyle="Italic" Foreground="White" VerticalAlignment="Center"> Hardware Store</TextBlock>

    </Grid>
</Window>
