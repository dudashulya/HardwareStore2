<Window x:Class="HardwareStore2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareStore2"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="960" MinWidth="1500" MaxHeight="960" MaxWidth="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60">
            </RowDefinition>
            <RowDefinition Height="201*"/>

        </Grid.RowDefinitions>
        <Rectangle Fill="OrangeRed" Grid.ColumnSpan="2"></Rectangle>
        <TextBlock x:Name="TitleTB" Grid.Column="1" HorizontalAlignment="Center" FontFamily="Arial" 
                   FontSize="30" FontStyle="Italic" Foreground="White" 
                   VerticalAlignment="Center"> Hardware Store</TextBlock>
        <StackPanel>
            <Button HorizontalAlignment="Right" Width="60"  x:Name="BackBtn" Click="BackBtn_Click" Background="#FFF7F0F0" Foreground="#FFF20101" >Назад</Button>
            <Button HorizontalAlignment="Right" Width="60" x:Name="ExitBtn" Click="ExitBtn_Click" Background="#FFF7F0F0" Foreground="#FFF20101">Выход</Button>
        </StackPanel>
        
        <Frame  Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>

    </Grid>
</Window>
